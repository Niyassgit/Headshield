    <style>
 /* General Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
}

/* Order Container */
.order-container {
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
}

/* Header Section */
.order-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #f1f1f1;
    padding-bottom: 20px;
    margin-bottom: 20px;
}

.order-header h2 {
    margin: 0;
    color: #333;
}

.status-badge {
    padding: 5px 10px;
    background-color: #ffcc00;
    color: #fff;
    border-radius: 5px;
    font-weight: bold;
}

/* Order Info Section */
.order-info p {
    font-size: 14px;
    color: #555;
    line-height: 1.6;
}

/* Ordered Items Section */
.products-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.product-box {
    padding: 15px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.product-details {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    margin-right: 15px;
    border-radius: 8px;
}

.product-info {
    flex: 1;
}

.product-info p {
    margin: 5px 0;
}

.product-info strong {
    font-size: 16px;
}

/* Order Totals Section (No Separate Boxes) */
.order-totals p {
    font-size: 16px;
    color: #333;
    font-weight: bold;
    margin-top: 15px;
}

.order-totals p strong {
    color: #000;
}



    </style>
</head>
<body>
    <div class="order-container">
        <!-- Order Header -->
        <div class="order-header">
            <h2>Order Details</h2>
            <span id="orderStatus" class="status-badge">Pending</span>
        </div>

        <!-- Order Information Section -->
        <div class="order-info">
            <% if(order) { %>
            <p><strong>Order ID:</strong> <span id="orderId"><%= order.orderId %></span></p>
            <p><strong>Invoice Date:</strong> <span id="invoiceDate"><%= new Date(order.invoiceDate).toLocaleString('en-IN', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            }) %></span></p>
            <p><strong>Payment Method:</strong> <span id="paymentMethod"><%= order.paymentMethod %></span></p>
            <p><strong>Coupon Applied:</strong> <span id="couponApplied"><%= order.couponApplied ? 'Yes' : 'No' %></span></p>

            <p><strong>Delivery Address:</strong> <% if(order.address) { %>
                <span id="deliveryAddress">
                  <%= address.name %><br>
                  <%= address.landmark %> <%= address.city %> <%= address.state %>, 
                  <%= address.country %> <%= address.pincode %><br>
                  <%= address.phone %>
                </span>
              <% } else { %>
                <span>No address available</span>
              <% } %></p>
            <% } %>
        </div>

        <!-- Ordered Items Section -->
        <h4>Ordered Items</h4>
        <div class="products-container">
            <% if(products.length > 0) { %>
                <% products.forEach(function(item) { %>
                    <div class="product-box">
                        <div class="product-details">
                            <img class="product-image" src="/uploads/re-image/<%= item.productImage[0] %>" alt="<%= item.productName %>">
                            <div class="product-info">
                                <p><strong><%= item.productName %></strong></p>
                                <p>Quantity: <%= item.quantity %></p>
                                <p>Price: ₹<%= item.price %></p>
                            </div>
                        </div>
                        <p><strong>Total: ₹<%= item.total %></strong></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No items in the order.</p>
            <% } %>
        </div>

        <!-- Order Totals Section (Without Divisions) -->
        <div class="order-totals">
            <p><strong>Total Price:</strong> ₹<span id="totalPrice"><%= order.totalPrice %></span></p>
            <p><strong>Discount:</strong> ₹<span id="discount"><%= order.discount %></span></p>
            <p><strong>Final Amount:</strong> ₹<span id="finalAmount"><%= order.finalAmount %></span></p>
        </div>
    </div>
        <!--sidebar Footer section-->
    </section>
</div>
</div>
</div>
</main>

   


