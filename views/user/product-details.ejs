<%- include("../partials/user/header") %>

    <style>
        .zoom-container {
            position: relative;
            overflow: hidden;
            /* Add this to contain the zoomed image */
        }

        .product-image {
            width: 100%;
            height: auto;
            display: block;
        }

        .zoomed-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s ease-in-out;
            background-repeat: no-repeat;
        }

        .zoom-container:hover .zoomed-image {
            opacity: 1;
        }

        .offer-ribbon {
            position: absolute;
            top: 10px;
            left: -5px;
            background: red;
            color: white;
            padding: 5px 10px;
            font-size: 14px;
            font-weight: bold;
            transform: rotate(-15deg);
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            z-index: 10;
        }

        .cart-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 15px;
            border-radius: 5px;
            display: none;
            font-weight: bold;
            z-index: 9999;
        }

        .success {
            background: green;
            color: white;
        }

        .error {
            background: red;
            color: white;
        }

        .badge {
            font-size: 14px;
            padding: 8px 12px;
            border-radius: 8px;
        }

        .bg-warning {
            background-color: #ffc107 !important;
        }

        .bg-danger {
            background-color: #dc3545 !important;
        }

        .bg-success {
            background-color: #28a745 !important;
        }
    </style>

    <!-- Modal -->
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>



    <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3 position-relative">
                        <div class="zoom-container position-relative">
                            <img class="product-image rounded-3" src="/uploads/re-image/<%= product.productImage[0] %>"
                                alt="Product image 1" id="product-detail">
                            <div class="zoomed-image" id="zoomedImage"></div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Controls -->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                            </a>
                        </div>

                        <!-- Carousel -->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item"
                            data-bs-ride="carousel">
                            <div class="carousel-inner product-links-wap" role="listbox">
                                <!-- First slide -->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <% for (let i=1; i <=3; i++) { %>
                                            <div class="col-4">
                                                <a href="#">
                                                    <img class="card-img img-fluid"
                                                        src="/uploads/re-image/<%= product.productImage[i] %>"
                                                        alt="Product Image <%= i + 1 %>">
                                                </a>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>

                                <!-- Second slide -->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                <img class="card-img img-fluid"
                                                    src="/uploads/re-image/<%= product.productImage[3] %>"
                                                    alt="Product Image 5">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Controls -->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Product Info -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2">
                                <%= product.productName %>
                            </h1>
                            <p class="h3 py-2">
                                &#8377;<%= product.salePrice.toLocaleString('en-IN') %>
                                    <span class="text-muted">
                                        <s>&#8377;<%= product.regularPrice.toLocaleString('en-IN') %></s>
                                    </span>
                                    <% if (product.finalOffer> 0) { %>
                                        <span class="badge bg-danger ms-2">
                                            <%= product.finalOffer %>% OFF
                                        </span>
                                        <p class="text-success mt-2">
                                            You Save: &#8377;<%= product.savedAmount.toLocaleString('en-IN') %>
                                        </p>
                                        <% } %>
                            </p>

                            <p class="py-2">
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                            </p>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Stock:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <% if (product.quantity> 5) { %>
                                        <span class="badge bg-success">In Stock</span>
                                        <% } else if (product.quantity> 0) { %>
                                            <span class="badge bg-warning text-dark">Few stocks left (<%=
                                                    product.quantity %>)</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Out of Stock</span>
                                                <% } %>
                                </li>
                            </ul>

                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Brand:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong>
                                            <%= product.brand.brandName %>
                                        </strong></p>
                                </li>
                            </ul>

                            <h6>Description:</h6>
                            <p>
                                <%= product.description %>
                            </p>

                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Available Color :</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong>
                                            <%= product.color %>
                                        </strong></p>
                                </li>
                            </ul>



                            <!-- Add to Cart Section -->
                            <div class="add-to-cart-section">
                                <input type="hidden" id="productId" value="<%= product._id %>">
                                <div class="row">
                                    <div class="col-auto">
                                        <ul class="list-inline pb-3">
                                            <li class="list-inline-item">Size:</li>
                                            <li class="list-inline-item">
                                                <span class="badge px-3 py-2" 
                                                    style="background-color: #59ab6e; border: 2px solid grey; color: white;"
                                                    id="product-size">
                                                    <%= product.size %>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                    
                                    <!-- Replace this section in your product detail page -->
                                    <div class="col-auto">
                                        <ul class="list-inline pb-3">
                                            <li class="list-inline-item text-right">Quantity</li>
                                            <li class="list-inline-item">
                                                <div class="quantity-controls d-flex align-items-center">
                                                    <button class="btn btn-sm btn-outline-secondary btn-success minus-btn"
                                                        data-product-id="<%= product._id %>">-</button>
                                                    <span class="quantity-display mx-3" id="var-value">1</span>
                                                    <button class="btn btn-sm btn-outline-secondary btn-success plus-btn"
                                                        data-product-id="<%= product._id %>">+</button>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="row pb-3">
                                    <div class="col d-grid">
                                        <button type="button" class="btn btn-success btn-lg" id="buyButton">Buy</button>
                                    </div>
                                    <div class="col d-grid">
                                        <button type="button" class="btn btn-success btn-lg" id="addToCartButton">Add To
                                            Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- col end -->

            </div>
        </div>
    </section>
    <!-- Close Content -->



    <!-- Start Article -->
    <section class="py-5">
        <div class="container">
            <div class="row text-left p-2 pb-3">
                <h4>Related Products</h4>
            </div>

            <!--Start Carousel Wrapper-->
            <div id="carousel-related-product">
                <% for (let i=0; i < relatedProducts.length; i++) { %>
                    <div class="p-2 pb-3">
                        <div class="product-wap card rounded-0 position-relative">
                            <% if (relatedProducts[i].finalOffer) { %>
                                <div class="offer-ribbon">
                                    <%= relatedProducts[i].finalOffer %>% OFF
                                </div>
                                <% } %>
                                    <div class="card rounded-0">
                                        <img class="card-img rounded-0 img-fluid"
                                            src="/uploads/re-image/<%= relatedProducts[i].productImage[0] %>"
                                            alt="<%= relatedProducts[i].productImage %>">
                                        <div
                                            class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                            <ul class="list-unstyled">
                                                <li><a class="btn btn-success text-white" href="shop-single.html"><i
                                                            class="far fa-heart"></i></a></li>
                                                <li><a class="btn btn-success text-white mt-2"
