<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup/Login - Helmet Store</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Custom CSS */
        #container {
            display: flex;
            flex-direction: row;
            width: 60%;
            height: 600px;
            background: url('https://wallpapercave.com/wp/wp2513901.jpg') no-repeat center center;
            background-size: cover;
            border-radius: 15px;
            margin-top: 5%;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 5px 5px 50px gray;
            position: relative;
            overflow: hidden;
        }
        .leftchild {
            width: 50%;
            color: white;
            position: absolute;
            left: 3px;
            top: 35%;
            text-align: center;
            padding-left: 5px;
        }
        .rightchild {
            position: absolute;
            width: 50%;
            background-color: rgba(255, 255, 255, 0.9); /* Slight transparency for better readability */
            right: 5px;
            height: 590px;
            margin-top: 5px;
            margin-bottom: 5px;
            border-radius: 15px;
            padding-top: 10%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        form {
            width: 90%;
            max-width: 400px; /* Set a maximum width for the form */
        }
        input {
            display: inline-block;
            padding: 10px 50px;
            border: none;
            background-color: rgb(233, 232, 232);
            width: 100%; /* Use 100% width of the parent form, but limit form width */
        }
        #btn {
            padding: 8px 30px;
            background-color: rgb(231, 40, 40);
            border: none;
            border-radius: 20px;
            color: white;
        }
        i {
            font-size: 20px;
            margin: 0 10px;
            cursor: pointer;
        }
        #btn1 {
            padding: 8px 35px;
            background-color: red;
            border: none;
            border-radius: 20px;
            color: white;
            width: 100%; /* Ensure button does not stretch */
        }
        .social-icons {
            margin-top: 10px;
            margin-bottom: 15px;
        }
        .already-registered {
            margin-top: 20px;
            text-align: center;
            font-size: 14px; /* Slightly smaller font for better readability */
        }
        .already-registered a {
            text-decoration: none;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div id="container" class="container">
        <div class="leftchild" id="leftchild">
            <h2>Welcome Back!</h2>
            <p>To keep connected with us please login with your personal info.</p>
            <button id="btn" class="btn btn-danger">SIGN IN</button>
        </div>
        <div class="rightchild" id="rightchild">
            <h2>Create Account</h2>
            <form action="/signup" method="POST">
                <!-- Name -->
                <input type="text" name="name" placeholder="Full Name" class="form-control mb-3" required>

                <!-- Email -->
                <input type="email" name="email" placeholder="Email" class="form-control mb-3" required>

                <!-- Phone -->
                <input type="text" name="phone" placeholder="Phone" class="form-control mb-3">

                <!-- Password -->
                <input type="password" name="password" placeholder="Password" class="form-control mb-3" required>

                <!-- Confirm Password -->
                <input type="password" name="confirmPassword" placeholder="Confirm Password" class="form-control mb-3" required>

                <!-- Social Media Icons -->
                <div class="social-icons d-flex justify-content-center">
                    <i class="fab fa-facebook text-primary"></i>
                    <i class="fab fa-google text-danger"></i>
                </div>

                <!-- Submit Button -->
                <button id="btn1" class="btn btn-danger">SIGN UP</button>
            </form>

            <!-- Already Registered -->
            <div class="already-registered">
                <p>Already have an account? <a href="#" id="loginLink">Login</a></p>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let elem = document.getElementById('btn');
        let right = document.getElementById('rightchild');
        let left = document.getElementById('leftchild');

        elem.addEventListener('click', (e) => {
            e.preventDefault();
            right.style.left = 5 + 'px';
            left.style.left = 50 + '%';
        });

        // Add functionality for the "Already have an account" link
        let loginLink = document.getElementById('loginLink');
        loginLink.addEventListener('click', (e) => {
            e.preventDefault();
            // You can redirect to the login page or show a login form
            alert("Redirecting to login page...");
            // window.location.href = "login.html"; // Uncomment to redirect to login page
        });
    </script>
</body>
</html>
