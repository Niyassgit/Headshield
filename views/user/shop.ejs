                                    <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>High To Low</option>
                                    <option value="name_asc" <%= sort === 'name_asc' ? 'selected' : '' %>>A to Z</option>
                                    <option value="name_desc" <%= sort === 'name_desc' ? 'selected' : '' %>>Z To A</option>
                                </select>
                            </form>
                            
                            
