                            <% for (let i = 0; i < products.length; i++) { %>
                                <div class="col-md-4 product-item" data-brand="<%= products[i].brand %>">
                                    <div class="card mb-4 product-wap rounded-0">
                                        <div class="card rounded-0 position-relative">
                                            <% if (products[i].finalOffer) { %>
                                                <div class="offer-ribbon">
                                                    <%= products[i].finalOffer %>% OFF
                                                </div>
                                            <% } %>
                                            <img class="card-img rounded-0 img-fluid" src="/uploads/re-image/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                                <ul class="list-unstyled">

                                                    <li><a class="btn btn-success text-white add-to-wishlist" data-product-id="<%= products[i]._id%>"><i class="far fa-heart"></i></a></li>


                                                    <li><a class="btn btn-success text-white mt-2" href="/productDetails?id=<%= products[i]._id %>"><i class="far fa-eye"></i></a></li>

                                                    <li>
                                                        <button class="btn btn-success text-white mt-2 add-to-cart" data-product-id="<%= products[i]._id %>">
                                                            <i class="fas fa-cart-plus"></i>
                                                        </button>
                                                    </li>        
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <a href="/productDetails?id=<%= products[i]._id %>" class="h3 text-decoration-none"><%= products[i].productName %></a>
                                            <p class="brand-name"><%= products[i].brand %></p>
                                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                                <li>M/L/X/XL</li>
                                            </ul>
                                          
                                            <p class="text-center mb-0">&#8377;<%= products[i].salePrice.toLocaleString('en-IN') %> 
                                                <span class="text-muted"><s>&#8377;<%= products[i].regularPrice.toLocaleString('en-IN') %></s></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
                
                
               
                <div class="row">
                      <ul class="pagination pagination-lg justify-content-end">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" 
                                   href="/shop?page=<%= currentPage - 1 %>">Prev</a>
                            </li>
                        <% } %>
                
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'disabled' : '' %>">
                                <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 <%= currentPage === i ? 'active' : 'text-dark' %>" 
                                   href="/shop?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" 
                                   href="/shop?page=<%= currentPage + 1 %>">Next</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>

        </div>
    </div>

