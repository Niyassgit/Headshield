<%- include("../../views/partials/user/header") %>

<main class="container my-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg border-0" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <h3 class="text-center mb-4" style="font-weight: 600;">Change Password</h3>
        <form action="/change-password" method="POST" class="d-flex flex-column align-items-center">
            <div class="form-group w-100">
                <label for="email" class="mb-2" style="font-weight: 500;">Email Address</label>
                <input type="email" class="form-control p-3" id="email" name="email" required placeholder="Enter your email" 
                    style="border-radius: 8px; border: 1px solid #ddd; font-size: 16px;">
            </div>
            <button type="submit" class="btn btn-primary mt-3 p-3 w-75"
                style="border-radius: 8px; font-size: 16px; font-weight: 500; background: #59ab6e; border: none;">
                Verify
            </button>
        </form>
    </div>
</main>

